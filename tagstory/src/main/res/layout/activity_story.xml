<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/story_part_option"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

	<Button
			android:id="@+id/story_activity_travel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true"
			android:padding="15dp"
			android:background="@color/holo_orange_light"
			android:textStyle="bold"/>

	<ScrollView
			android:id="@+id/story_part_scrollview"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_above="@+id/story_activity_travel"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_margin="15dp">

		<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

			<ImageView
					android:id="@+id/story_tag_image_top"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:scaleType="fitStart"
					android:adjustViewBounds="true"
					android:layout_gravity="center_horizontal"
					android:contentDescription="@string/cd_tag_image"
					android:paddingBottom="5dp"
					android:visibility="gone"/>

			<TextView
					android:id="@+id/description"
					style="@style/TagStoryViewMedium"/>

			<ImageView
					android:id="@+id/story_tag_image_middle"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:scaleType="fitStart"
					android:adjustViewBounds="true"
					android:layout_gravity="center_horizontal"
					android:contentDescription="@string/cd_tag_image"
					android:paddingBottom="5dp"
					android:paddingTop="5dp"
					android:visibility="gone"/>

			<TextView
					android:id="@+id/story_part_choice"
					style="@style/TagStoryViewMedium"
					android:visibility="gone"/>

			<ImageView
					android:id="@+id/story_tag_image_bottom"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:scaleType="fitStart"
					android:adjustViewBounds="true"
					android:layout_gravity="center_horizontal"
					android:contentDescription="@string/cd_tag_image"
					android:paddingTop="5dp"
					android:visibility="gone"/>
		</LinearLayout>
	</ScrollView>

</RelativeLayout>