<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

	<LinearLayout
			android:id="@+id/button_bottom"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentRight="true" >

		<Button
				android:id="@+id/scan_tag"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@color/holo_orange_light"
				android:onClick="scanTag"
				android:padding="15dp"
				android:text="@string/story_scan_tag"
				android:textStyle="bold" />

		<Button
				android:id="@+id/help_button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@color/holo_orange_dark"
				android:onClick="scanTag"
				android:padding="15dp"
				android:text="@string/story_gps_button"
				android:textStyle="bold" />
	</LinearLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button_bottom"
        android:padding="15dp" >

        <LinearLayout
            android:id="@+id/story_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/story_option_hint"
                style="@style/TagStoryViewMedium" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>