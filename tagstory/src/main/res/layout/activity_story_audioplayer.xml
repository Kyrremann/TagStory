<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/story_audio_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:background="@drawable/background_border_light_green"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/story_option_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/story_audio_song"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/textAppearanceMedium"
            android:textStyle="italic" />
    </LinearLayout>
    <LinearLayout
            android:id="@+id/button_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true" >

        <Button
                android:id="@+id/scan_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/android_yellow"
                android:enabled="false"
                android:onClick="scanTag"
                android:padding="15dp"
                android:text="@string/story_scan_tag"
                android:textStyle="bold" />

        <Button
                android:id="@+id/help_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/android_yellow_dark"
                android:onClick="scanTag"
                android:padding="15dp"
                android:text="@string/story_gps_button"
                android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>