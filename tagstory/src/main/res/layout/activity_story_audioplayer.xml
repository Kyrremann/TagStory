<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/story_audio_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

	<ScrollView
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:layout_above="@+id/button_bottom"
			android:padding="15dp">

		<LinearLayout
				android:id="@+id/story_option_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">

			<TextView
					android:id="@+id/story_option_hint"
					style="@style/TagStoryViewMedium"/>

			<TextView
					android:id="@+id/story_audio_song"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:background="@drawable/background_border_light_green"
					style="?android:attr/textAppearanceMedium"
					android:textStyle="italic"/>

			<MediaController
					android:id="@+id/audio_controllers"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"/>
		</LinearLayout>
	</ScrollView>

	<include layout="@layout/include_travel_buttonbar"/>

</RelativeLayout>