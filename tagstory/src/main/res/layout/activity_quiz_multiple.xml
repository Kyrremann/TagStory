<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_above="@+id/button_multiple_answers_bottom"
		android:layout_alignParentTop="true"
		android:layout_centerHorizontal="true"
		android:padding="@dimen/default_padding">

		<TextView
			android:id="@+id/question_multiple"
			style="@style/TagStoryViewMedium"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			tools:text="Lorem Ipsum is simply dummy"/>
	</ScrollView>

	<Button
		android:id="@+id/button_multiple_answers_bottom"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerInParent="true"
		android:background="@color/holo_orange_light"
		android:onClick="quizAnswerMMultiple"
		android:padding="15dp"
		android:text="@string/story_quiz_multiple"
		android:textAppearance="@style/TextAppearanceButton"
		/>
</RelativeLayout>