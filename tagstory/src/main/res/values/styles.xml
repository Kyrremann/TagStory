<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light">

        <!-- <item name="android:windowBackground">@color/android_green</item> -->
        <item name="android:windowBackground">@color/hs_green</item>
    </style>

    <style name="TagStoryView" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_border_light_green</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TagStoryViewMedium" parent="TagStoryView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_border_light_green</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="TagStoryViewLarge" parent="TagStoryView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/background_border_light_green</item>
        <item name="android:padding">10dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal"/>

	<style name="TextAppearanceButton">
		<item name="android:textColor">@color/text_color_white</item>
		<item name="android:textSize">@dimen/text_size_medium</item>
		<item name="textAllCaps">true</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>