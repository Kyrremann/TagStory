<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/button_bottom"
        android:padding="15dp" >

        <LinearLayout
            android:id="@+id/story_option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                    android:id="@+id/image_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/cd_tag_image"
                    android:paddingBottom="5dp"
                    android:visibility="gone"/>

            <TextView
                android:id="@+id/story_option_hint"
                style="@style/TagStoryViewMedium" />

            <ImageView
                    android:id="@+id/image_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitStart"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal"
                    android:contentDescription="@string/cd_tag_image"
                    android:paddingTop="5dp"
                    android:visibility="gone"/>
        </LinearLayout>
    </ScrollView>

	<include layout="@layout/include_travel_buttonbar"/>

</RelativeLayout>